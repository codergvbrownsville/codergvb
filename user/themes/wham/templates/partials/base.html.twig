{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/logo2.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('theme://css/grids-min.css', 103) %}
        {% do assets.addCss('http://yui.yahooapis.com/pure/0.6.0/pure-min.css', 100) %}
        {% do assets.addCss('https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', 99) %}
        {% do assets.addCss('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css') %}
        {% do assets.addCss('theme://css/custom.css') %}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('jquery', 100) %}
    {% endblock %}
    {{ assets.js() }}

{% endblock head%}
</head>
<body id="top" class="{{ page.header.body_classes }} container">

{% block header %}
    <div class="header">
        <div class="wrapper padding">
            <a href="{{ base_url == '' ? '/' : base_url }}">
            </a>
            {% block header_navigation %}
            <nav class="main-nav">
                {% include 'partials/navigation.html.twig' %}
            </nav>
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block body %}
    <section id="body">
        <div class="wrapper padding">
        {% block content %}{% endblock %}
        </div>
    </section>
{% endblock %}

{% block footer %}
    <div class="footer text-center">
        <div class="wrapper padding">
            <a href="https://www.facebook.com/groups/codergvb/" target="_blank">join <i class="fa fa-facebook-square" aria-hidden="true"> </i> group</a>
            <span style="display:inline-block; width: 2;"></span>
            <a href="https://www.facebook.com/codergvbrownsville/" target="_blank">like <i class="fa fa-facebook-square" aria-hidden="true"> </i> page</a>
            <span style="display:inline-block; width: 2;"></span>
            <a href="https://codergv.herokuapp.com/" target="_blank">goof <i class="fa fa-slack" aria-hidden="true"> </i> chat</a>
            <span style="display:inline-block; width: 2;"></span>
            <a href="https://github.com/codergvbrownsville/codergvb/" target="_blank">edit <i class="fa fa-github-alt" aria-hidden="true"> </i> site</a>
        </div>
    </div>
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}
<script>
  $(function(){
    $(document).ready(function() {
      $('table').addClass('table')
    })
  })
</script>
</body>
</html>
